#
# Bootstrap
#
LIB=$( cd "$( dirname "$0" )" && pwd )/lib
source $LIB/core       # core vars and functions
source $LIB/connection # connection logic
source $LIB/jog        # jog mode

function _helpCmd {
    local helpText="$(color yellow)
Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent id convallis
quam. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi lacinia
interdum purus, suscipit venenatis enim vestibulum id. Nam cursus, tellus a
egestas consequat, turpis libero vestibulum nulla, sed gravida nibh mauris
non tellus.
$(color)
"
    echo "$helpText"
    exit 0;
}

function _helpLoop {
    local helpText="$(color yellow)
Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent id convallis
quam. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi lacinia
interdum purus, suscipit venenatis enim vestibulum id. Nam cursus, tellus a
egestas consequat, turpis libero vestibulum nulla, sed gravida nibh mauris
non tellus.
$(color)
"
    echo "$helpText"
}

case "$1" in
    '-h'|'--help'|'help')   _helpCmd;;
    '--new-device')         conRemoveDeviceStore;;
esac

# TODO: Migrate connection control into command loop
conOpen

while true; do

    [ "$MODE" == "$START_UP" ] && _helpLoop # offer some help on start up
    MODE=$RAW                               # default to raw mode

    echo -n "$(color yellow)[monitor] > $(color)"
    read input

    case "$input" in
        'help') _helpLoop;;
        'exit') conClose;;
        'jog')  jogMode;;
        'home') jogHome;;
        *)  # Process raw input
            conSend "$input"
            echo
            ;;
    esac
done;
